{
    "name": "page-dark",
    "version": "0.0.0",
    "private": true,
    "license": "MPL-2.0",
    "repository": "https://gitlab.com/Marnes/page-dark.git",
    "author": "Marnes <leaumar@mailbox.org>",
    "scripts": {
        "build": "yarn clean && yarn tsc && yarn eslint && yarn compile && yarn qa && yarn package",
        "clean": "rimraf dist",
        "compile": "parcel build \"src/*.*\" \"src/images/*.*\" --dist-dir dist/parcel",
        "compile:watch": "parcel watch \"src/*.*\" \"src/images/*.*\" --dist-dir dist/parcel --no-autoinstall --no-hmr",
        "eslint": "eslint \"src/**/*.ts\" --cache --cache-location dist/eslint/",
        "package": "web-ext build",
        "qa": "web-ext lint",
        "start": "web-ext run",
        "start:chrome": "web-ext run -t chromium",
        "tsc": "tsc -b"
    },
    "dependencies": {
        "@webextensions/common": "*",
        "fast-equals": "^3.0.0",
        "tslib": "^2.3.1",
        "type-fest": "^2.12.0",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@types/webextension-polyfill": "^0.8.2",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "eslint": "^8.10.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "parcel": "^2.3.2",
        "prettier": "^2.5.1",
        "prettier-plugin-package": "^1.3.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.6.2",
        "web-ext": "^6.7.0"
    }
}
