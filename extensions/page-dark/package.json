{
    "name": "page-dark",
    "version": "0.0.0",
    "private": true,
    "repository": "https://gitlab.com/Marnes/page-dark.git",
    "license": "MPL-2.0",
    "author": "Marnes <leaumar@mailbox.org>",
    "scripts": {
        "build": "yarn clean && yarn tsc && yarn eslint && yarn compile && yarn qa && yarn package",
        "clean": "rimraf dist extension",
        "compile": "parcel build \"src/*.*\" \"src/images/*.*\" --dist-dir extension",
        "compile:watch": "parcel watch \"src/*.*\" \"src/images/*.*\" --dist-dir extension --no-autoinstall --no-hmr",
        "eslint": "eslint \"src/**/*.ts\"",
        "package": "web-ext build",
        "qa": "web-ext lint",
        "start": "web-ext run",
        "start:chrome": "web-ext run -t chromium",
        "tsc": "tsc"
    },
    "dependencies": {
        "fast-equals": "^2.0.4",
        "tslib": "^2.3.1",
        "type-fest": "^2.11.2",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@types/webextension-polyfill": "^0.8.2",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^8.8.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "parcel": "^2.2.1",
        "prettier": "^2.5.1",
        "prettier-plugin-packagejson": "^2.2.15",
        "rimraf": "^3.0.2",
        "sass": "^1.49.7",
        "typescript": "^4.5.5",
        "web-ext": "^6.7.0"
    }
}
