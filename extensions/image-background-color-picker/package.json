{
    "name": "image-background-color-picker",
    "version": "0.0.0",
    "private": true,
    "license": "MPL-2.0",
    "repository": "git@gitlab.com:Marnes/image-background-color-picker.git",
    "author": "Marnes <leaumar@mailbox.org>",
    "scripts": {
        "build": "yarn clean && yarn tsc && yarn eslint && yarn compile && yarn qa && yarn package",
        "clean": "rimraf dist extension .cache",
        "compile": "pnpify parcel build \"src/*.*\" --out-dir extension",
        "compile:watch": "pnpify parcel watch \"src/*.*\" --out-dir extension --no-autoinstall --no-hmr",
        "eslint": "eslint \"src/**/*.ts\"",
        "package": "web-ext build",
        "qa": "web-ext lint",
        "start": "web-ext run",
        "start:chrome": "web-ext run -t chromium",
        "tsc": "tsc"
    },
    "dependencies": {
        "fast-equals": "^2.0.4",
        "ts-essentials": "^9.1.2",
        "tslib": "^2.3.1",
        "type-fest": "^2.11.0",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@types/webextension-polyfill": "^0.8.2",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "@yarnpkg/pnpify": "^2.4.0",
        "cssnano": "^4.1.11",
        "eslint": "^8.8.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-web-extension": "^1.6.1",
        "prettier": "^2.5.1",
        "prettier-plugin-package": "^1.3.0",
        "rimraf": "^3.0.2",
        "sass": "^1.49.0",
        "typescript": "^4.5.5",
        "web-ext": "^6.6.0"
    }
}
