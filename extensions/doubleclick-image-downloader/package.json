{
    "name": "doubleclick-image-downloader",
    "version": "0.0.0",
    "private": true,
    "license": "MPL-2.0",
    "repository": "https://gitlab.com/Marnes/doubleclick-image-downloader.git",
    "author": "Marnes <leaumar@mailbox.org>",
    "scripts": {
        "build": "run-s clean lint compile qa package",
        "clean": "rimraf dist extension .cache",
        "compile": "pnpify parcel build src/*.* --out-dir extension",
        "compile:watch": "pnpify parcel watch src/*.* --out-dir extension --no-autoinstall --no-hmr",
        "eslint": "eslint src/**/*.ts",
        "package": "web-ext build",
        "qa": "web-ext lint",
        "start": "web-ext run",
        "start:chrome": "web-ext run -t chromium"
    },
    "dependencies": {
        "basscss-sass": "^4.0.0",
        "fast-equals": "^2.0.3",
        "ts-essentials": "^9.0.0",
        "tslib": "^2.3.1",
        "type-fest": "^2.5.3",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@types/webextension-polyfill": "^0.8.1",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@yarnpkg/pnpify": "^3.1.0",
        "babel-types": "^6.26.0",
        "cssnano": "^4.1.11",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-web-extension": "^1.6.1",
        "prettier-plugin-package": "^1.3.0",
        "rimraf": "^3.0.2",
        "sass": "^1.43.4",
        "typescript": "^4.4.4",
        "web-ext": "^6.5.0"
    }
}
