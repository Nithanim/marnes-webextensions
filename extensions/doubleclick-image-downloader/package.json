{
    "name": "doubleclick-image-downloader",
    "version": "0.0.0",
    "private": true,
    "license": "MPL-2.0",
    "repository": "https://gitlab.com/Marnes/doubleclick-image-downloader.git",
    "author": "Marnes <leaumar@mailbox.org>",
    "scripts": {
        "build": "yarn clean && yarn tsc && yarn eslint && yarn parcel:build && yarn webext:lint && yarn webext:build",
        "clean": "rimraf dist",
        "eslint": "eslint \"src/**/*.ts\" --cache --cache-location dist/eslint/",
        "parcel:build": "parcel build \"src/*.*\" \"src/images/*.*\" --dist-dir dist/parcel",
        "parcel:watch": "parcel watch \"src/*.*\" \"src/images/*.*\" --dist-dir dist/parcel --no-autoinstall --no-hmr",
        "start": "web-ext run",
        "start:chrome": "web-ext run -t chromium",
        "tsc": "tsc -b",
        "webext:build": "web-ext build",
        "webext:lint": "web-ext lint"
    },
    "dependencies": {
        "@webextensions/common": "workspace:*",
        "fast-equals": "^3.0.0",
        "ts-essentials": "^9.1.2",
        "tslib": "^2.3.1",
        "type-fest": "^2.12.2",
        "webextension-polyfill": "^0.9.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@types/webextension-polyfill": "^0.8.3",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "eslint": "^8.12.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "parcel": "^2.3.2",
        "prettier": "^2.6.2",
        "prettier-plugin-package": "^1.3.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.6.3",
        "web-ext": "^6.8.0"
    }
}
