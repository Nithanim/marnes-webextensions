{
    "name": "copy-selected-links",
    "version": "0.0.0",
    "private": true,
    "license": "MPL-2.0",
    "repository": "https://gitlab.com/Marnes/copy-selected-links.git",
    "author": "Marnes <leaumar@mailbox.org>",
    "scripts": {
        "build": "yarn clean && yarn tsc && yarn eslint && yarn parcel:build && yarn webext:lint && yarn webext:build",
        "clean": "rimraf --impl=native dist",
        "eslint": "eslint \"src/**/*.ts\" --cache --cache-location dist/eslint/",
        "eslint:fix": "eslint \"src/**/*.ts\" --cache --cache-location dist/eslint/ --fix",
        "parcel:build": "parcel build src/manifest.json src/content.ts --dist-dir dist/parcel",
        "parcel:watch": "parcel watch src/manifest.json src/content.ts --dist-dir dist/parcel --no-autoinstall --no-hmr",
        "start": "web-ext run",
        "start:chrome": "web-ext run -t chromium",
        "tsc": "tsc -b",
        "webext:build": "web-ext build",
        "webext:lint": "web-ext lint"
    },
    "dependencies": {
        "@webextensions/common": "workspace:*",
        "fast-equals": "^4.0.3",
        "modern-normalize": "^1.1.0",
        "ts-essentials": "^9.3.0",
        "tslib": "^2.5.0",
        "type-fest": "^3.5.3",
        "webextension-polyfill": "^0.10.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "@types/webextension-polyfill": "^0.10.0",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "eslint": "^8.35.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "parcel": "^2.8.3",
        "postcss": "^8.4.21",
        "prettier": "^2.8.4",
        "prettier-plugin-package": "^1.3.0",
        "rimraf": "^4.1.4",
        "tailwindcss": "^3.2.7",
        "typescript": "^4.9.5",
        "web-ext": "^7.5.0"
    }
}
