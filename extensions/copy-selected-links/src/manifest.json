{
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "jid1-vs5odTmtIydjMg@jetpack"
        }
    },
    "name": "Copy Selected Links",
    "short_name": "CSL",
    "version": "2.4.1",
    "description": "Right-click selected text to copy the URL of any links it contains.",
    "author": "leaumar@mailbox.org",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": false
    },
    "background": {
        "scripts": ["background.ts"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "contextMenus",
        "notifications",
        "storage"
    ],
    "commands": {
        "copy-selected-links": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Copy the currently selected links."
        }
    }
}
