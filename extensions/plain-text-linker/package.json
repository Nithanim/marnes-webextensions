{
    "name": "plain-text-linker",
    "version": "0.0.0",
    "private": true,
    "license": "MPL-2.0",
    "repository": "https://gitlab.com/Marnes/plain-text-linker.git",
    "author": "Marnes <leaumar@mailbox.org>",
    "scripts": {
        "build": "yarn clean && yarn tsc && yarn eslint && yarn parcel:build && yarn webext:lint && yarn webext:build",
        "clean": "rimraf dist",
        "eslint": "eslint \"src/**/*.ts\" --cache --cache-location dist/eslint/",
        "parcel:build": "parcel build src/manifest.json --dist-dir dist/parcel",
        "parcel:watch": "parcel watch src/manifest.json --dist-dir dist/parcel --no-autoinstall --no-hmr",
        "start": "web-ext run",
        "start:chrome": "web-ext run -t chromium",
        "tsc": "tsc -b",
        "webext:build": "web-ext build",
        "webext:lint": "web-ext lint"
    },
    "dependencies": {
        "@webextensions/common": "workspace:*",
        "fast-equals": "^4.0.3",
        "modern-normalize": "^1.1.0",
        "ts-essentials": "^9.3.0",
        "tslib": "^2.4.0",
        "type-fest": "^3.1.0",
        "webextension-polyfill": "^0.10.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.3.1",
        "@types/webextension-polyfill": "^0.9.1",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "eslint": "^8.25.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "parcel": "^2.7.0",
        "postcss": "^8.4.18",
        "prettier": "^2.7.1",
        "prettier-plugin-package": "^1.3.0",
        "rimraf": "^3.0.2",
        "tailwindcss": "^3.2.0",
        "typescript": "^4.8.4",
        "web-ext": "^7.3.1"
    }
}
