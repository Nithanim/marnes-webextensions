{
    "name": "@marnes/webextensions",
    "version": "0.0.0",
    "private": true,
    "repository": "https://gitlab.com/Marnes/webextensions",
    "license": "MPL-2.0",
    "author": "Marnes <leaumar@mailbox.org>",
    "workspaces": [
        "extensions/*"
    ],
    "scripts": {
        "build": "yarn workspaces foreach run build",
        "bundle": "bestzip sources.zip \"extensions/*/*.*\" \"extensions/*/src\" .editorconfig .eslintrc.react.yml .eslintrc.yml .gitignore .node-version .parcelrc .prettierrc.yml .yarnrc.yml browserslist license.md package.json readme.md tsconfig.json web-ext-config.js yarn.lock",
        "clean": "rimraf .parcel-cache sources.zip && yarn workspaces foreach run clean",
        "prettier": "prettier --write --list-different --ignore-unknown --ignore-path .gitignore . !.yarn !yarn.lock"
    },
    "resolutions": {
        "@types/react": "^17.0.39"
    },
    "devDependencies": {
        "@parcel/config-default": "^2.2.1",
        "@parcel/config-webextension": "^2.2.1",
        "@parcel/core": "^2.2.1",
        "@parcel/transformer-sass": "^2.2.1",
        "@typescript-eslint/parser": "^5.11.0",
        "bestzip": "^2.2.0",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-react": "^1.1.7",
        "eslint-import-resolver-node": "^0.3.6",
        "eslint-plugin-import": "^2.25.4",
        "git-is-clean": "^3.0.1",
        "prettier": "^2.5.1",
        "prettier-plugin-packagejson": "^2.2.15",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.5"
    },
    "packageManager": "yarn@3.1.1"
}
