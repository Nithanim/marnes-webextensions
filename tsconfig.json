{
    "compilerOptions": {
        "esModuleInterop": true,
        "importHelpers": true,
        "inlineSourceMap": false, // maximum js parsing performance
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noEmit": true,
        "noUncheckedIndexedAccess": true,
        "strict": true,
        "target": "es2020", // compile as modernly as possible, parcel will downcompile anyway with babel and browserslist
        "useUnknownInCatchVariables": true
    },
    "include": []
}
